@import 'nib'

// BOTOES
// ==============================
a.link-accessibility
  padding-left 12px !important
  padding-right 12px !important

#font-increase:after, #font-decrease:after
  display inline-block
  vertical-align top
  margin -3px 0 0 -3px
  font-size 1em

#font-increase:after
  content "+"

#font-decrease:after
  content "-"

#high-contrast
  color white

  .fa
      background black
      padding 3px 4px
      margin -3px -4px

#scroll-down
  font-size 20px

#scroll-top
  absolute right 30px
  font-size 30px
  color #777

  &:hover, &:focus
    color #333

#page-footer #scroll-top
  color white


// CONTRASTE
// ==============================
body.high-contrast
  background #000
  color white

  #site-wrapper
    background #000

  #page-nav
    background #000

    .navbar-nav>li>a
      color white

    .info-name img
      background white

    .navbar-text
      color white

  #main-navbar
    background #333
    border-color white

  #high-contrast
    color #000 !important

    .fa
      background #FFF

  #scroll-top
    color white

  #page-wrapper:before
    background #000

  #page-sidebar .nav-menu > li > a
    color white

    &:hover, &:focus
      color black
      background white

  .panel-form
    background #333

  .modal
    .modal-content
      background #333
    .close
      color white

  .table-hover>tbody>tr:hover
    color #000

  #page-footer, #footer-bottom
    background #333

  #footer-bottom
    border-top 1px solid white
